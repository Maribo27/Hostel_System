<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

  <jsp-config>
    <taglib>
      <taglib-uri>hostelTag</taglib-uri>
      <taglib-location>/WEB-INF/tld/hostelTag.tld</taglib-location>
    </taglib>
  </jsp-config>

  <listener>
    <listener-class>by.tc.task31.controller.listener.InitializerListener</listener-class>
  </listener>

  <error-page>
    <error-code>404</error-code>
    <location>/pageNotFound</location>
  </error-page>

  <error-page>
    <error-code>403</error-code>
    <location>/forbidden</location>
  </error-page>

  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>by.tc.task31.controller.Controller</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/hostel_system</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogIn</servlet-name>
    <jsp-file>/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogIn</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Register</servlet-name>
    <jsp-file>/index.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Home</servlet-name>
    <jsp-file>/jsp/home.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Preferences</servlet-name>
    <jsp-file>/jsp/preferences.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Preferences</servlet-name>
    <url-pattern>/preferences</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Forbidden</servlet-name>
    <jsp-file>/WEB-INF/jsp/error/forbidden.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Forbidden</servlet-name>
    <url-pattern>/forbidden</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>NotFound</servlet-name>
    <jsp-file>/WEB-INF/jsp/error/pageNotFound.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>NotFound</servlet-name>
    <url-pattern>/pageNotFound</url-pattern>
  </servlet-mapping>
<!--

  <filter>
    <filter-name>Access</filter-name>
    <filter-class>by.tc.task31.controller.filter.Access</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>Access</filter-name>
    <url-pattern>/jsp/*</url-pattern>
  </filter-mapping>


-->
  <filter>
    <filter-name>NoCacheFilter</filter-name>
    <filter-class>by.tc.task31.controller.filter.NoCacheFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>NoCacheFilter</filter-name>
    <url-pattern>/jsp/*</url-pattern>
  </filter-mapping>

  <context-param>
    <param-name>log4j-config-location</param-name>
    <param-value>WEB-INF/classes/log4j.properties</param-value>
  </context-param>
</web-app>